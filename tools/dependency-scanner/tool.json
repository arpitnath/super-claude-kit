{
  "name": "dependency-scanner",
  "version": "2.0.0",
  "description": "Multi-language dependency graph analyzer with circular dependency detection",
  "type": "binary",
  "entry": "bin/dependency-scanner",
  "languages": ["typescript", "javascript", "go", "python"],
  "author": "Arpit Nath",
  "keywords": ["dependencies", "imports", "circular", "dead-code", "tree-sitter"],
  "usage": {
    "command": "dependency-scanner",
    "flags": {
      "--path": "Path to scan (default: current directory)",
      "--output": "Output file path (default: ~/.claude/dep-graph.toon, supports .json or .toon)",
      "--verbose": "Enable verbose output",
      "--version": "Show version information"
    },
    "examples": [
      {
        "description": "Scan current directory (TOON format)",
        "command": "dependency-scanner --path . --output ./deps.toon"
      },
      {
        "description": "Scan with JSON format",
        "command": "dependency-scanner --path . --output ./deps.json"
      },
      {
        "description": "Scan with verbose output",
        "command": "dependency-scanner --path /path/to/project --verbose"
      }
    ]
  },
  "outputs": {
    "format": "toon (default) or json",
    "location": "~/.claude/dep-graph.toon",
    "schema": {
      "Files": "FILE:/path LANG:lang IMPORTS:... EXPORTS:... IMPORTEDBY:...",
      "Circular": "CIRCULAR:path>path>path",
      "DeadCode": "DEADCODE:/path",
      "Metadata": "META:lastUpdated=timestamp"
    }
  },
  "permissions": {
    "read": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.go", "**/*.py"],
    "write": ["~/.claude/dep-graph.toon", "~/.claude/dep-graph.json"],
    "network": false
  },
  "autoRun": {
    "enabled": true,
    "triggers": ["session-start"],
    "condition": "always"
  }
}
